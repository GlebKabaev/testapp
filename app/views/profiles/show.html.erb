<p style="color: green"><%= notice %></p>

<%= render @profile %>

<div>
<%if @profile.user != current_user%>
  <% if user_signed_in? %>
    <% if current_user.subscribed_to.include?(@profile.user) %>
      <%= button_to 'Unsubscribe', unsubscribe_profile_path(@profile), method: :delete %>
    <% else %>
      <%= button_to 'Subscribe', subscribe_profile_path(@profile) %>
    <% end %>
  <% end %>
<%end%>
</div>

<div>
<% if @profile.user_id == current_user.id %>
  <%= link_to "Edit profile", edit_profile_path(@profile) %>
  <%= button_to "Destroy this profile", @profile, method: :delete %>
  

<%end%>
  
  <%= link_to "Back to profiles", profiles_path %>

  
</div>
