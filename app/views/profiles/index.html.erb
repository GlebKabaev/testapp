<h1>Profiles</h1>

<% if user_signed_in? %>
  <% if current_user.profile.blank? %>
    <%= link_to 'New Profile', new_profile_path %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        
        <td><a href="<%= profile.picture.url %>" data-fancybox="gallery">
        <%= image_tag profile.picture.avatar.url %>
      </a></td>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= link_to 'Show', profile %></td>
        <% if profile.user_id == current_user.id %>
          <td>Wow! its You!</td>
          <td><%= link_to 'Edit profile', edit_profile_path(profile) %></td>
        <% end %>
       
      </tr>
    <% end %>
  </tbody>
</table>
